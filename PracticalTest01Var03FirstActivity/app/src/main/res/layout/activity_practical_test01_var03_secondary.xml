<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ro.pub.cs.systems.eim.practic.practicaltest01var03firstactivity.PracticalTest01Var03SecondaryActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="63dp"
        android:layout_marginTop="59dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_grupa" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="@+id/button_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_cancel" />

    <TextView
        android:id="@+id/edittext_name"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginEnd="63dp"
        android:layout_marginStart="64dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edittext_grupa"
        app:layout_constraintEnd_toStartOf="@+id/edittext_grupa"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/edittext_grupa"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edittext_name"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
